{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #c2f0f0;
    }


    h1 {
        font-size: 500%;
        text-align: center;
        color: brown;
        margin-top: 120px; /* Adjust this value to position the title vertically */
         border: 2px solid #333; /* Example border style */
    border-radius: 20px; /* Adjust the radius as needed */
    padding: 10px 20px; /* Optional: Add padding to give space around the text */
    }

    

    .MainPart {
        min-height: 100vh; 
        top: 65px;
        
        background-size: cover;
        position: relative; 
          
    }
    .container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }
    .bloc-left1, .bloc-right1, .bloc-2, .bloc-22 {
    position: absolute;
    width: 40%;
    height: 40%;
    background-color: black;
    z-index: 10;
    color: #134d9e;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    text-align: center;
    border-radius: 20px; /* Adjust the radius as needed */
}

   h2 ,h1{
    margin-top: 20px;
    text-align: center;
    border: 2px solid #333; /* Example border style */
    border-radius: 20px; /* Adjust the radius as needed */
    padding: 10px 20px; /* Optional: Add padding to give space around the text */
    backdrop-filter: blur(10px);
}

    .bloc-left1 {
        top: 20px;
        left: 100px; /* Add this to position it correctly */
        background: url('{{ asset('hospital-chamber.jpg') }}');
        background-size: 100% 100%;
    }   

    .bloc-right1{

        top: 20px;
        right: 100px;
        background: url('{{ asset('talkingdoc.jpg') }}');
        background-size: 100% 100%;
    }
    .bloc-2
    {
        right: 100px;
        top: 470px;
        background: url('{{ asset('colorwave2.jpg') }}');
        background-size: 100% 100%;
    }
    .bloc-22
    {
        top: 470px;
        left: 100px;
        background: url('{{ asset('colorwave.jpg') }}');
        background-size: 100% 100%;
    }

    .nav-button {
    padding: 10px 20px;
    background-color: #853535;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}
    .nav-button:hover {
    background-color: #6d2929;
}
    .button-holder,.button-holder2
    {
    display: flex;
    justify-content: center;
    align-items: center;
    max-widht: 400px;
    }

    .button-holder {
    display: flex;
    justify-content: center;
    align-items: center;
}
.end-doc
{
    position: absolute;
    background: black;
    bottom:0;
}
.container{
	max-width: 1170px;
	margin:auto;
}
.row{
	display: flex;
	flex-wrap: wrap;
}
ul{
	list-style: none;
}


/*responsive*/
@media(max-width: 767px){
  .footer-col{
    width: 50%;
    margin-bottom: 30px;
}
}
@media(max-width: 574px){
  .footer-col{
    width: 100%;
}
}

</style>
</head>
<body>


<div class="MainPart">
    <div class="container">
        <div class="bloc-left1">
            <h2> Reserver une piece</h2>
            <a href="{{ path('app_rooms') }}" class="button-holder"><button class="nav-button" data-description="View available rooms">Rooms</button></a></li>

            <a href="{{ path('reservation_index') }}" class="button-holder2"><button class="nav-button" data-description="Manage reservations">Reservations</button></a></li>
                
            
        </div>
        <div class="bloc-right1">
            <h2> Consulter les disponibilité</h2>
            <a href="{{ path('schedule_index') }}"class="button-holder"><button class="nav-button" data-description="Check the schedule">Schedule</button></a>
            
        </div>
        <div class="bloc-2">
            <h2> S'inscrire</h2>
            <a href="{{ path('app_register') }}"class="button-holder"><button class="nav-button" data-description="Register a new account">Register</button></a>
        </div>

        <div class="bloc-22">
            <h2> Déja Inscrit? Connectez-vous!</h2>
            <a href="{{ path('app_login') }}"class="button-holder"><button class="nav-button" data-description="Login to your account">Login</button></a>
        </div>
    </div>
</div>
</body>



{% endblock %}
