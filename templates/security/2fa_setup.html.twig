{# templates/security/2fa_setup.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Set up Two-Factor Authentication{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 1.5rem;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
        .card-body {
            font-size: 1.2rem;
            text-align: center;
        }
        .card-footer {
            text-align: center;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            transition: background-color 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-header">
            Set up Two-Factor Authentication
        </div>
        <div class="card-body">
            <p class="mb-4">Scan the QR code below with your authenticator app:</p>
            <img src="{{ qrCodeUrl }}" alt="QR Code" class="img-fluid mb-4" />
        </div>
        <div class="card-footer">
            <a href="{{ path('homepage') }}" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>
{% endblock %}
