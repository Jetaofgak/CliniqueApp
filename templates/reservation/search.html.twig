{% extends 'base.html.twig' %}

{% block title %}Search Reservations{% endblock %}

{% block body %}
<style>
    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-container form {
        display: flex;
        flex-direction: column;
    }

    .form-container form div {
        margin-bottom: 10px;
    }

    .form-container button {
        align-self: flex-end;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-container button:hover {
        background-color: #45a049;
    }

    .available-rooms {
        margin-top: 20px;
    }

    .available-rooms table {
        width: 100%;
        border-collapse: collapse;
    }

    .available-rooms th, .available-rooms td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
    }

    .available-rooms th {
        background-color: #f2f2f2;
    }
</style>

<div class="form-container">
    <h1>Search Reservations</h1>

    {{ form_start(form) }}
        {{ form_row(form.starttime) }}
        {{ form_row(form.endtime) }}
        <button type="submit">Search</button>
    {{ form_end(form) }}

    {% if available_rooms is not empty %}
        <div class="available-rooms">
            <h2>Available Rooms</h2>
            <table>
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>Schedule</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for room in available_rooms %}
                        <tr>
                            <td>{{ room.name }}</td>
                            <td>
                                <ul>
                                    {% for schedule in room.schedules %}
                                        <li>Schedule ID: {{ schedule.id }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                {% for schedule in room.schedules %}
                                    <a href="{{ path('reservation_new', {scheduleId: schedule.id}) }}">Reserve this room</a><br>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>No rooms available for the selected time period.</p>
    {% endif %}
</div>
{% endblock %}
