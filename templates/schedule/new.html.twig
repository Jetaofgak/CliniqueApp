{% extends 'base.html.twig' %}

{% block title %}New Schedule{% endblock %}

{% block body %}
<style>
    .form-container {
        margin-top: 100px; /* Adjust this value to create enough space */
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    form {
        width: 100%;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="datetime-local"] {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .submit-button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .submit-button:hover {
        background-color: #45a049;
    }
</style>

<div class="form-container">
    <h1>New Schedule</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.start_time) }}
        {{ form_widget(form.start_time, {'attr': {'placeholder': 'Select start time'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.end_time) }}
        {{ form_widget(form.end_time, {'attr': {'placeholder': 'Select end time'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.room) }}
        {{ form_widget(form.room) }}
    </div>

    <button type="submit" class="submit-button">Save</button>
    {{ form_end(form) }}
</div>
{% endblock %}
