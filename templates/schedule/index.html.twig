{% extends 'base.html.twig' %}

{% block title %}Schedule List{% endblock %}

{% block body %}
<style>
    .table-container {
        margin-top: 100px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .add-schedule-link {
        display: block;
        text-align: center;
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .add-schedule-link:hover {
        background-color: #45a049;
    }

    .action-buttons a {
        margin-right: 10px;
    }

    .action-buttons form {
        display: inline;
    }
</style>

<div class="table-container">
    <h1>Schedule List</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Room</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for schedule in schedules %}
                <tr>
                    <td>{{ schedule.id }}</td>
                    <td>{{ schedule.room.name }}</td>
                    <td>{{ schedule.startTime|date('Y-m-d H:i') }}</td>
                    <td>{{ schedule.endTime|date('Y-m-d H:i') }}</td>
                    <td class="action-buttons">
                        <a href="{{ path('schedule_edit', {id: schedule.id}) }}">Edit</a>
                        <form method="post" action="{{ path('schedule_delete', {id: schedule.id}) }}" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('schedule_new') }}" class="add-schedule-link">Add New Schedule</a>
</div>
{% endblock %}
